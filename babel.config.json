{
    "presets": [
        [
            "@babel/preset-env",
            {
                "targets": "ie 11, > 0.5%, not dead",
                "useBuiltIns": "usage",
                "corejs": 3,
                "modules": false
            }
        ]
    ],
    "plugins": [
        "@babel/plugin-syntax-dynamic-import",
        [
            "@babel/plugin-transform-runtime",
            {
                "useESModules": true
            }
        ]
    ]
}
